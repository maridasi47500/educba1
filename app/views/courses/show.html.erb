<p style="color: green"><%= notice %></p>

<header>
  <h1><%= @course.titre %></h1>
  <p><%=@course.hours%>+ hours</p>
</header>
<main>
  <p><b>curriculum:</b>
  <%=simple_format(@course.curriculum)%></p>
  <p>
  &#127902; 
  <%=@course.lectures.length%> 
  <%="confÃ©rence".pluralize(@course.lectures.length)%> 

  </p>
  <p>
  &#x1f553; 
  <%=@course.nbminutes%> minute
  <%="minutes".pluralize(@course.nbminutes.to_i)%> 

  </p>
  <p>
  <%@note=@course.note%>
  <span class="badge text-bg-secondary"><%=@note%></span>
  <%(@note).times do%>
    <span style="color:yellow;">&#9733</span>
  <%end%>
  <%(5 - @note).times do%>
    <span style="color:grey;">&#9733</span>
  <%end%>
  </p>
</main>


<div>
  <%if user_signed_in?%>
  <%= button_to "Join this course", startcourse_course_path(@course), method: :post %>

  <%= link_to "Edit this course", edit_course_path(@course) %> |
  <%= link_to "Ajouter 1 lecture", addlecture_course_path(@course) %> |
  <%= link_to "Back to courses", courses_path %>

<%end%>
  <%= link_to "Back to all the courses", cat_path(@course.catid) %>



  <%= button_to "Destroy this course", @course, method: :delete %>
</div>
