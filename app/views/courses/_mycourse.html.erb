<div class="col">
<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="..." alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%=course.titre%></h5>
        <p class="card-text"><%note=course.note%>
          <span class="badge text-bg-secondary"><%=note%></span>
          <%(note).times do%>
              <span style="color:yellow;">&#9733</span>
          <%end%>
          <%(5 - note).times do%>
              <span style="color:grey;">&#9733</span>
          <%end%></p>
        <a href="/courses/<%=course.id%>" class="btn btn-primary">Voir ce cours</a>
                      </div>
</div>
</div>
