<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>


    <%= f.hidden_field :username,value:"CBA Patron" %>
    <%@pass=("00000000000".."99999999999").to_a.sample%>
  <div class="field">
    <%= f.label :email %><br />
  </div>
  <p>mot de passe : <%=@pass%></p>
    <%= f.password_field :password, autocomplete: "new-password",hidden: true, value: @pass %>

    <%= f.password_field :password_confirmation, autocomplete: "new-password",hidden: true, value: @pass %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

